doctype
html(lang='en')
  head
    include ../includes/header.pug

    script(src='/js/sidebar.js', defer)
    link(rel='stylesheet', href='/css/sidebar.css')
  body
    include ../includes/sidebar.pug
 
    #sidebarExtension
      header.text-center.pt-4
        .large-icon.bg-white.round
          img.round(src=user.avatarUrl(128), alt=user.username)
        h4.pt-2 #{user.username}
          span.text-muted #{'#' + user.discriminator.toString().padStart(4, '0')}

      .p-4
        label Theme
        select#themeSelect.form-control
          option(value='DARK', selected) Dark (Default)
          option(value='OCEAN') Ocean
          option(value='COSMIC') Cosmic
          option(value='TWILIGHT') Twilight
          option(value='CHOCOLATE') Chocolate 
          option(value='LIGHT') Light(Very Bright)

    include ../includes/navbar.pug

    .container.jumbotron.text-center.bg-transparent
      h3 Hey #{user.username}!
      p.lead.text-muted Here you can manage your servers, one place for everything!