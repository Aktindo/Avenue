section#overviewModule.module.px-5
  .form-group.mt-5
    h1.display-4.text-center Server Overview 
    hr
    .row.text-center
      .col-lg-3.col-md-6
        .border.rounded.m-3.p-3
          p.uppercase
            i.fas.fa-user
            strong.ml-1 Owner
          p.mb-0 #{guild.owner.user.tag}
      .col-lg-3.col-md-6
        .border.rounded.m-3.p-3
          p.uppercase
            i.fas.fa-user-alt
            strong.ml-1 Members
          p.mb-0 #{guild.memberCount}
      .col-lg-3.col-md-6
        .border.rounded.m-3.p-3
          p.uppercase
            i.fas.fa-at
            strong.ml-1 Roles
          p.mb-0 #{guild.roles.cache.size}
      .col-lg-3.col-md-6
        .border.rounded.m-3.p-3
          p.uppercase
            i.fas.fa-hashtag
            strong.ml-1 Channels
          p.mb-0 #{guild.channels.cache.size}        
  .charts.mt-5.px-4
    .row
      .col-lg-4.col-md-4
        .card-dark
          h3 Joins/Leaves
          .joins-chart
      .col-lg-4.col-md-4
        .card-dark
          h3 Messages
          .messages-chart
      .col-lg-4.col-md-4
        .card-dark
          h3 Commands
          .commands-chart