nav.navbar.navbar-expand-lg.navbar-light(style='background-color: #7289DA;')
  a.navbar-brand(href='/')
    img.d-inline-block.align-top(src='/images/AvenueLogo-96-BLURPLE.png', alt='', width='40', height='40')
  button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbar', aria-controls='navbar', aria-expanded='false', aria-label='Toggle navigation')
    span.navbar-toggler-icon
  #navbar.collapse.navbar-collapse
    .navbar-nav
      a.nav-link(href='/commands')
        i.fas.fa-folder
        span.pl-1 Commands
      a.nav-link(href='/invite')
        i.fas.fa-plus
        span.pl-1 Invite
      a.nav-link(href='/faq')
        i.fas.fa-question
        span.pl-1 FAQ        
      a.nav-link(href='/blogs')
        i.fas.fa-edit
        span.pl-1 Blog
      a.nav-link(href='/support')
        i.fab.fa-discord
        span.pl-1 Support
    .navbar-nav.ml-auto
      if user
        .dropdown.mr-2
          .dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
            img.user-avatar.round(src=user.avatarUrl(32))
            span.pl-2 #{user.username}
          .dropdown-menu(style='background-color: #2C2F33;')
            a.dropdown-item(href='/dashboard', style='background-color: #2C2F33') 
              i.fas.fa-sliders-h
              span.pl-1 Dashboard
            hr
            a.dropdown-item(href='/logout', style='background-color: #2C2F33')
              i.fas.fa-sign-out-alt
              span.pl-1 Logout
      else
        a.nav-link(href='/login') 
          i.fas.fa-sign-in-alt
          span.pl-1 Login